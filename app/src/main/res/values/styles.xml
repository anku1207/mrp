<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="fullscreen" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>

    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>








    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>



    <style name="CustomDialogconnecting" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Connecting ...</item>
        <item name="DialogSpotColor">@color/colorPrimary</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="CustomDialogloading" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">loading...</item>
        <item name="DialogSpotColor">@color/colorPrimary</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="DialogSpotCount">4</item>
    </style>





    <style name="MyCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/colorPrimary</item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">@color/colorPrimary</item> <!-- activated color change as you wish -->
        <item name="android:textColor">#CF221E</item> <!-- checkbox text color -->
    </style>


    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/textColor</item>
    </style>



    <style name="TextViewMrp" parent="android:Widget.TextView">
        <item name="android:background">@color/mrp_textViewBackgroundColor</item>
        <item name="android:textColor">@color/mrp_textViewTextColor</item>
        <item name="android:textSize">@dimen/mrp_textView_textSize_normal</item>
        <item name="android:paddingLeft">@dimen/mrp_textView_padding_left</item>
        <item name="android:paddingRight">@dimen/mrp_textView_padding_left</item>
        <item name="android:paddingTop">@dimen/mrp_textView_padding_top</item>
        <item name="android:paddingBottom">@dimen/mrp_textView_padding_top</item>
    </style>



    <style name="pin_edittext_style">
        <item name="android:gravity">center</item>
        <!--<item name="android:cursorVisible">false</item>-->
        <item name="android:maxLength">1</item>
        <item name="android:minEms">2</item>
        <item name="android:inputType">number</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>



    </style>









</resources>
