<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Order_Complete"
    android:orientation="vertical">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">


    <ImageView
        android:id="@+id/imageview"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/animated_check"

         />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill_vertical"
        android:textAlignment="center"
        android:text="Yay! Order Successfully Placed"
        android:textStyle="bold"
        android:textSize="17dp"
       />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill_vertical"
        android:textAlignment="center"
        android:text=""
        android:textStyle=""
        android:textSize="17dp"
        android:id="@+id/orderid"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/continueshopping"
        android:text="Continue Shopping"
        android:padding="10dp"
        android:layout_marginTop="70dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@drawable/round_border_bg_green"
        />


</LinearLayout>







</LinearLayout>