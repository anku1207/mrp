<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="200dp"
    android:layout_margin="10dp"
    android:background="@drawable/paynimo_view_rounded_corner" >

    <TextView
        android:id="@+id/dialog_one_tv_title"
        style="@style/TextViewMrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text=""
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/dialog_one_tv_text"
        style="@style/TextViewMrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/dialog_one_tv_title"
        android:gravity="center"
        android:minWidth="300dp"
        android:padding="10dp"
        android:text=""/>

    <RelativeLayout
        android:id="@+id/dialog_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        >

        <Button
            android:id="@+id/dialog_one_btn"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:background="@drawable/round_border_bg_green"
            android:text="Ok"/>
    </RelativeLayout>

</RelativeLayout>