<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/paynimo_view_rounded_corner"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/msg"
        style="@style/TextViewMrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:minWidth="300dp"
        android:padding="10dp"
        android:text="mahapay mahapay mahapay mahapay mahapay mahapay mahapay mahapay mahapay mahapay mahapay" />

    <LinearLayout
        android:id="@+id/dialog_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="75dp"
            android:layout_height="35dp"

            android:layout_marginRight="20dp"
            android:background="@drawable/btn_simple_round_border"
            android:text="Yes"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="75dp"
            android:layout_height="35dp"

            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_simple_round_border"
            android:text="No"
            android:textSize="12dp" />


    </LinearLayout>

</LinearLayout>